<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Suppliers</title>
    <!-- Bootstrap styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <!-- Importing CSS -->
    <link rel="stylesheet" href="/public/styles.css">
</head>
<body>

    <div class="container-fluid px-4 py-4">
        <!-- Header Section -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="mb-1 fw-bold">Suppliers</h2>
                <p class="text-muted">Manage your suppliers</p>
            </div>
            <a href="/inventory/suppliers/add" class="btn btn-primary fw-bold">
                <i class="bi bi-plus-lg me-2"></i>Add Supplier
            </a>
        </div>

        <!-- Alert Messages -->
        <% if (successMessage) { %>
            <div class="alert alert-success alert-dismissible show" role="alert" id="successAlert">
                <i class="bi bi-check-circle me-2"></i><%= successMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (errorMessage) { %>
            <div class="alert alert-danger alert-dismissible show" role="alert" id="errorAlert">
                <i class="bi bi-exclamation-circle me-2"></i><%= errorMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <!-- Suppliers Table -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="bg-light">
                            <tr>
                                <th>Name</th>
                                <th>Contact</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% suppliers.forEach(supplier => { %>
                                <tr>
                                    <td><%= supplier.name %></td>
                                    <td><%= supplier.contact %></td>
                                    <td><%= supplier.email %></td>
                                    <td><%= supplier.address %></td>
                                    <td class="text-end">
                                        <a href="/inventory/suppliers/edit/<%= supplier.id %>" class="btn btn-outline-warning btn-sm me-2">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <form action="/inventory/suppliers/delete/<%= supplier.id %>" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this supplier?')">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    
</body>
</html>
