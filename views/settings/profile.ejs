<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings</title>
    <!-- Bootstrap styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Importing custom CSS -->
    <link rel="stylesheet" href="/public/styles.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <h2 class="text-center mb-5">User Profile Settings</h2>
                <!-- Alert message -->
                <% if (successMessage) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= successMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                
                <% if (errorMessage) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= errorMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                
                

                <!-- Email update form -->
                <form action="/inventory/settings/update-email" method="POST">
                    <div class="mb-4">
                        <label for="email" class="form-label fs-5">Email:</label>
                        <input type="email" id="email" name="email" class="form-control p-3" value="<%= user.email %>" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-2">Update Email</button>
                </form>
                
                <!-- Name update form -->
                <form action="/inventory/settings/update-name" method="POST" class="mt-4">
                    <div class="mb-4">
                        <label for="name" class="form-label fs-5">Name:</label>
                        <input type="text" id="name" name="name" class="form-control p-3" value="<%= user.name %>" required>
                    </div>
                    <button type="submit" class="btn btn-success w-100 py-2">Update Name</button>
                </form>
                <br><br>
                <!-- Password change form -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Change Password</h5>
                    </div>
                    <div class="card-body">
                        <form action="/inventory/settings/change-password" method="POST">
                            <div class="mb-3">
                                <label for="current-password" class="form-label">Current Password</label>
                                <input type="password" name="current-password" id="current-password" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="new-password" class="form-label">New Password</label>
                                <input type="password" name="new-password" id="new-password" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="confirm-password" class="form-label">Confirm New Password</label>
                                <input type="password" name="confirm-password" id="confirm-password" class="form-control" required>
                            </div>
                            <button type="submit" class="btn btn-warning w-100 py-2">Change Password</button>
                        </form>
                    </div>
                </div>
                
                <!-- Profile picture upload form -->
                 <!-- Profile Picture Upload Form -->
<div class="card mb-4">
    <div class="card-header">
        <h5>Change Profile Picture</h5>
    </div>
    <div class="card-body">
        <form action="/inventory/settings/upload-profile-pic" method="POST" enctype="multipart/form-data">
            <input type="file" name="profilePic" accept="image/*">
            <button type="submit">Upload Picture</button>
        </form>
        
</div>

                
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (optional for additional functionality) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
