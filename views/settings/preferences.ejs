<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Preferences</title>
    <!-- Bootstrap styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <!-- Importing custom CSS -->
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

<!-- Preferences container -->
    <div class="container mt-5">
        <h2 class="text-center fw-bold">User Preferences</h2>
        
        <!-- Preferences Form -->
        <form action="/inventory/settings/update-preferences" method="POST">
            <!-- Theme Preference -->
            <div class="mb-4">
                <label for="theme" class="form-label fw-bold">Theme</label>
                <select name="theme" id="theme" class="form-select" required>
                    <option value="light" <%= user.theme === 'light' ? 'selected' : '' %>>Light</option>
                    <option value="dark" <%= user.theme === 'dark' ? 'selected' : '' %>>Dark</option>
                </select>
            </div>

            <!-- Language Preference -->
            <div class="mb-4">
                <label for="language" class="form-label fw-bold">Language</label>
                <select name="language" id="language" class="form-select" required>
                    <option value="en" <%= user.language === 'en' ? 'selected' : '' %>>English</option>
                    <option value="es" <%= user.language === 'es' ? 'selected' : '' %>>Spanish</option>
                    <option value="fr" <%= user.language === 'fr' ? 'selected' : '' %>>French</option>
                </select>
            </div>

            <!-- Notification Preferences -->
            <div class="mb-4">
                <label class="form-label fw-bold">Notification Preferences</label>
                <div class="form-check">
                    <input type="checkbox" name="email_notifications" class="form-check-input" id="email_notifications" <%= user.email_notifications ? 'checked' : '' %>>
                    <label class="form-check-label" for="email_notifications">
                        Receive email notifications
                    </label>
                </div>
                <div class="form-check">
                    <input type="checkbox" name="sms_notifications" class="form-check-input" id="sms_notifications" <%= user.sms_notifications ? 'checked' : '' %>>
                    <label class="form-check-label" for="sms_notifications">
                        Receive SMS notifications
                    </label>
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary fw-bold">Save Preferences</button>
        </form>
    </div>
    </body>
</html>

